DEPTH=../../../..
topsrcdir=@top_srcdir@
srcdir=@srcdir@
VPATH=@srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE = inspector
LIBRARY_NAME = inspector
EXPORT_LIBRARY = 1
SHORT_LIBNAME = inspectr
REQUIRES	= xpcom \
		  string \
		  gfx \
		  layout \
		  content \
		  dom \
		  widget \
		  rdf \
		  rdfutil \
		  locale \
		  gfx2 \
		  timer \
		  necko \
		  imglib2 \
		  $(NULL)
IS_COMPONENT = 1
MODULE_NAME	= nsInspectorModule

CPPSRCS 	= \
		nsInspectorModule.cpp \
		$(NULL)

LOCAL_INCLUDES += -I$(srcdir)/../../base/src

# Linking against a part of another library is evil.  It also currently
# prevents building on Mac OS X (DARWIN).
EXTRA_DSO_LIBS = rdfutil_s gkgfx gkconshared_s

SHARED_LIBRARY_LIBS = \
		$(DIST)/lib/libinspector_s.$(LIB_SUFFIX) \
		$(NULL)

EXTRA_DSO_LDOPTS += \
	-L$(DIST)/bin \
	-L$(DIST)/lib \
	$(EXTRA_DSO_LIBS) \
	$(MOZ_COMPONENT_LIBS) \
	$(PNG_LIBS) \
	$(ZLIB_LIBS) \
	$(NULL)

include $(topsrcdir)/config/rules.mk

